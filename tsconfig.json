{
    "compilerOptions": {
        "composite": true,
        "preserveConstEnums": true,
        "preserveSymlinks": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es2018",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "es2018"
        ],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}